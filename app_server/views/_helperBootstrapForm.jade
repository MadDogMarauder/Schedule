// Mixin helper functions for forms

// Panel setup
mixin formPanelEnd(textSubmit)
    .col.text-center
        p
        button.ui-button.ui-corner-all.ui-widget(type='submit') #{textSubmit}

mixin formInputText(label,inputName,textPlaceholder, dbValue, isRequired, isAutoFocus,isReadOnly)
    div.form-group
        label #{label}
        if !dbValue
            - dbValue = ''
        input.form-control(type='text' placeholder='#{textPlaceholder}' name='#{inputName}' value=dbValue required=isRequired autofocus=isAutoFocus readonly=isReadOnly)
mixin formReadOnlyInput(label,inputName,textPlaceholder, dbValue)
    div.form-group
        label #{label}
        if !dbValue
            - dbValue = ''
        input.form-control(type='text' placeholder='#{textPlaceholder}' name='#{inputName}' value=dbValue readonly)
mixin formPasswordInput(label,inputName,textPlaceholder)
    div.form-group
        label #{label}
        input.form-control(type='password' placeholder='#{textPlaceholder}' name='#{inputName}' required)

mixin formPanelEndSaveCancel()
    .col.text-center
        p
        button.ui-button.ui-corner-all.ui-widget(type='submit') Save
        button.ui-button.ui-corner-all.ui-widget(onclick='window.history.back()') Cancel
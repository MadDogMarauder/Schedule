//- The purpose of this file is to create the top navbar for the application

//-Initialize the navbar component and parent
    name - text to display
    id - name of the navbar
    style - 'default' or 'inverse'
mixin topnav(name, id, style)
    - var style = (typeof style === 'undefined') ? 'default' : style

    nav( role='navigation', class=['navbar', 'navbar-' + style, 'navbar-static-top'] )

        .navbar-header
            button.navbar-toggle.collapsed( type='button', data-toggle='collapse', data-target='#' + id, aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/')
                i(class='fa fa-calendar fa-2x' aria-hidden='true')  #{name}

        .collapse.navbar-collapse( id=id )
            ul.nav.navbar-nav
                li(class='active'): a(href='/') home
            ul.nav.navbar-nav(class=['navbar','navbar-nav','navbar-right'])
                if currentUser
                    p(class='navbar-text navbar-right') Signed in as
                        a(href='/editUser') &#32;#{currentUser.username}
                else
                    li
                        a(href='/login') Login in
                    li
                        a(href='/signup') Sign up &#32;
    div.container
        each error in errors
            div.alert.alert-danger(role='alert')
                p #{error}
        each info in infos
            div.alert.alert-info(role='alert')
                p #{info}



